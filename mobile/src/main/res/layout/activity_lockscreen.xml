<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LockscreenActivity">


    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lockscreenTextClock"
        android:visibility="visible"
        android:textSize="40dp"
        android:layout_marginBottom="100dp"
        android:layout_alignBottom="@+id/headingText"
        android:layout_centerHorizontal="true" />

    <AnalogClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lockscreenAnalogClock"
        android:layout_marginBottom="70dp"
        android:layout_alignBottom="@+id/headingText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Click your pattern"
        android:id="@+id/headingText"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red"
        android:id="@+id/buttonRed"
        android:layout_below="@+id/headingText"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@+id/lockscreenTextClock" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue"
        android:id="@+id/buttonBlue"
        android:layout_below="@+id/headingText"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/lockscreenTextClock"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green"
        android:id="@+id/buttonGreen"
        android:layout_below="@+id/headingText"
        android:layout_marginTop="130dp"
        android:layout_alignLeft="@+id/buttonRed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yellow"
        android:id="@+id/buttonYellow"
        android:layout_below="@+id/headingText"
        android:layout_marginTop="130dp"
        android:layout_alignLeft="@+id/buttonBlue"
        android:layout_marginBottom="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/displayText"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"/>

</RelativeLayout>
